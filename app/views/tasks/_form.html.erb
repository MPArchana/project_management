<div class="container">
  <%= simple_form_for @task do |f| %>
    <div class="col">
      <div class="col-sm">
        <%= f.association :project, collection: Project.all, label_method: :name, value_method: :id,
          prompt: "Select Project" %>
      </div>
      <div class="col-sm">
         <%= f.input :name %>
       </div>
       <div class="col-sm">
         <%= f.input :status, collection:[ 'Pending','In Process','Done' ] %>
        
      </div>
      <div class="col-sm">
         <%= f.text_field :due_date, :id => "datepicker", :value => Date.today %>
        
      </div>
      <div class="col-sm">
         <%= f.input :label, collection: ['Feature','Enhancement','Bug','Rework', 'UI-Work'] %>
        
      </div>
      <div class="col-sm">
         <%= f.input :done %>
      </div>
      <div class="col-sm">     
       <%= f.button :submit, class: "btn-primary" %>
      </div>

    </div>
  <% end %>
</div>

<script type="text/javascript">
  $('#datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>


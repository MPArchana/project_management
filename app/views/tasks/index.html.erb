<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <div class="container">           
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Project</th>
          <th>Name</th>
          <th>Status</th>
          <th>Due date</th>
          <th>Label</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.project.name %></td>
            <td><%= task.name %></td>
            <td><%= task.status %></td>
            <td><%= task.due_date %></td>
            <td><%= task.label %></td>
            <td><%= link_to 'Assign Users', assign_users_task_path(task.id), class: "btn btn-info" %></td>
            <td><%= link_to 'Show', task, class: "btn btn-success" %></td>
            <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %></td>
            <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</table>

<br>

<%= link_to 'Add Task', new_task_path, class: "btn btn-primary" %>
<%= link_to 'Back', projects_path, class: "btn btn-info" %>

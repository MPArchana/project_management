<center><h3> Assign users to Task <%= @task.name %></h3></center>
<br></br>
<div class="container">
  <%= simple_form_for @task, url: "assign_users", method: "post", 
    html: { class: "form-horizontal" } do |f| %>
    <%= f.error_notification %>
    <% @task.project.users.all.each do |user| %>
      <%= check_box_tag "task[user_ids][]", user.id, @task.user_ids.include?(user.id) %>
      <%= user.name_with_email %>
      <br>
    <% end %>
    
    <div class="row">  
      <div class="col-md-4 offset-md-4"></div>   
        <%= f.button :submit, "Assign User", class: "btn btn-success" %>
      </div> 
    </div>
  </div>
<% end %>

<%= link_to 'Back', tasks_path, class: "btn btn-secondary" %>

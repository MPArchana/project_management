<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table>
<div class="container"> 
  <div class="row">
    <div class="col-md-4 offset-md-4">         
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Client details</th>
            <th colspan="3"></th>
          </tr>
        </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.client_details %></td>
        <td>
          <div class="btn-stack">
            <%= link_to 'Show', project, class: "btn btn-success" %>
            <%= link_to 'Assign Users', assign_users_form_project_path(project.id), class: "btn btn-info" %>
            <%= link_to 'Edit', edit_project_path(project),  class: "btn btn-primary" %>
            <%= link_to 'Tasks', tasks_path(project_id: project.id), class: "btn btn-secondary" %>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, 
              class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</div>
</div>
</table>

<br>

<%= link_to 'Add Project', new_project_path, class: "btn btn-primary" %>


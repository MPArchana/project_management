<div class="container">
  <%= simple_form_for @project do |f| %>
    <div class="col">
      <div class="col-sm">
        <%= f.input :name %>
      </div>

      <div class="col-sm-4">
        <%= f.input :description %>
      </div>

      <div class="col-sm-4">
        <%= f.input :client_details %>
      </div>

      <div class="col-sm-4"> 
        <%= f.button :submit, class: "btn-success" %>
      </div> 
  <% end %>
</div>

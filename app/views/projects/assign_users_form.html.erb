<center><h3>Assign users to Project <%= @project.name %></h3></center>
<br><br>
<div class="container">
  <%= simple_form_for @project, url: "assign_users", method: "post", 
    html: { class: "form-horizontal" } do |f| %>
    <%= f.error_notification %>
    
    <% User.all.each do |user| %>
      <%= check_box_tag "project[user_ids][]", user.id, @project.user_ids.include?(user.id) %>
      <%= user.name_with_email %>
      <br>
    <% end %>
 
    <div class="row">  
      <div class="col-md-4 offset-md-4"></div>
        <%= f.submit class: "btn-success" %>
      </div>
  <% end %>
</div>

<%= link_to 'Back', projects_path, class: "btn btn-secondary" %>



